extends layout

block pageContent
	h1 Delete Contact
	

	ul.list-group
		li.list-group-item #{user.name.first}
		li.list-group-item #{user.name.last}
		li.list-group-item #{user.title}
		li.list-group-item #{user.company}
		li.list-group-item #{user.email}
		li.list-group-item #{user.wheremet}
		li.list-group-item #{user.datement}
		li.list-group-item #{user.comments}
	
	div
		form.form-horizontal(action="/deletecontact/#{user._id}", method="post")
			p Are you sure you want to delete this contact?
			div.form-group
				button.btn.btn-default(value="yes", type="submit", name="button") Yes
				button.btn.btn-default(value="no", type="submit", name="button") No